{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": 2,
          "items": [
            {
              "id": "titleText",
              "type": "TextBlock",
              "text": "Let's start with your contact info.",
              "weight": "bolder",
              "size": "medium"
            },
            {
              "id": "nameText",
              "type": "TextBlock",
              "text": "Name",
              "wrap": true
            },
            {
              "type": "Input.Text",
              "id": "name",
              "placeholder": "John Doe"
            },
            {
              "id": "emailText",
              "type": "TextBlock",
              "text": "Your email",
              "wrap": true
            },
            {
              "type": "Input.Text",
              "id": "email",
              "placeholder": "johndoe@example.com",
              "style": "email"
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit"
    }
  ]
}