{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveCard",
	"version": "1.0",
	"body": [
		{
			"type": "TextBlock",
			"size": "medium",
			"weight": "bolder",
			"text": "Thank you for taking time to submit your feedback",
			"horizontalAlignment": "center"
		},
		{
			"type": "TextBlock",
			"text": "What is the category for the feedback?"
		},
		{
			"type": "Input.ChoiceSet",
			"id": "Category",
			"style": "compact",
			"value": "1",
      "choices": [
        {
          "title": "BuildAndRelease",
          "value": "1"
        },
        {
          "title": "VersionControl",
          "value": "2"
        },
        {
          "title": "WorkItems",
          "value": "3"
        },
        {
          "title": "Notification",
          "value": "4"
        }
      ]
		},
		{
			"type": "TextBlock",
			"text": "Would you like to provide some description?"
		},
		{
			"type": "Input.Text",
			"placeholder": "Description",
			"style": "text",
			"isMultiline": true,
			"maxLength": 0,
			"id": "Description"
		},

		{
			"type": "TextBlock",
			"text": "How would you rate your experince with us?"
		},
		{
			"type": "Input.ChoiceSet",
			"id": "Rating",
			"style": "expanded",
			"value": "1",
			"choices": [
				{
					"title": "Very Poor",
					"value": 1
				},
				{
					"title": "Poor",
					"value": 2
				},
				{
					"title": "Good",
					"value": 3
				},
				{
					"title": "Very Good",
					"value": 4
				},
				{
					"title": "Nailed it!",
					"value": 5
				}
			]
		}
	],
	"actions": [
		{
			"type": "Action.Submit",
			"title": "Submit"
		}
	]
}